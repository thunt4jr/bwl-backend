{
  "collectionName": "components_seo_seo_metadata",
  "info": {
    "displayName": "SEO Metadata",
    "description": "Comprehensive SEO metadata for content"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaKeywords": {
      "type": "text"
    },
    "focusKeyword": {
      "type": "string",
      "description": "Primary keyword to focus on for this content"
    },
    "metaRobots": {
      "type": "enumeration",
      "enum": [
        "index, follow",
        "index, nofollow",
        "noindex, follow",
        "noindex, nofollow"
      ],
      "default": "index, follow",
      "required": true
    },
    "advancedRobots": {
      "type": "string",
      "description": "Additional robots directives (e.g., noarchive, nosnippet, max-image-preview:large)"
    },
    "canonicalURL": {
      "type": "string",
      "description": "Set canonical URL if this content should point to another URL"
    },
    "metaViewport": {
      "type": "string",
      "default": "width=device-width, initial-scale=1"
    },

    "structuredData": {
      "type": "json",
      "description": "JSON-LD structured data for rich snippets (Schema.org)"
    },
    "localBusiness": {
      "type": "component",
      "repeatable": false,
      "component": "seo.local-business"
    },
    "legalService": {
      "type": "component",
      "repeatable": true,
      "component": "seo.legal-service",
      "description": "Legal service schema details"
    },

    "ogTitle": {
      "type": "string",
      "maxLength": 70,
      "description": "Open Graph title (leave blank to use Meta Title)"
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 200,
      "description": "Open Graph description (leave blank to use Meta Description)"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Image for social media sharing (recommended: 1200Ã—630 pixels)"
    },
    "ogType": {
      "type": "enumeration",
      "enum": ["website", "article", "profile", "book", "business.business"],
      "default": "website"
    },
    "ogLocale": {
      "type": "string",
      "default": "en_US",
      "description": "Content language for Open Graph"
    },

    "twitterCard": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary_large_image"
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Specific Twitter image (leave blank to use OG image)"
    },
    "twitterSite": {
      "type": "string",
      "description": "Twitter username for the website (e.g., @yourfirm)"
    },
    "twitterCreator": {
      "type": "string",
      "description": "Twitter username for the content creator (e.g., @attorney)"
    },

    "preventIndexing": {
      "type": "boolean",
      "default": false,
      "description": "Check to completely prevent indexing (adds noindex, nofollow, noarchive, nosnippet)"
    },
    "excludeFromSitemap": {
      "type": "boolean",
      "default": false,
      "description": "Check to exclude this page from the sitemap"
    },

    "breadcrumbs": {
      "type": "component",
      "repeatable": true,
      "component": "seo.breadcrumb",
      "description": "Define custom breadcrumb path"
    },

    "pageSpeedOptimizations": {
      "type": "component",
      "repeatable": false,
      "component": "seo.page-speed"
    },

    "hreflangLinks": {
      "type": "component",
      "repeatable": true,
      "component": "seo.hreflang",
      "description": "Alternate language versions of this page"
    },

    "articlePublishDate": {
      "type": "datetime",
      "description": "Publication date for article schema"
    },
    "articleModifiedDate": {
      "type": "datetime",
      "description": "Last modified date for article schema"
    },
    "articleAuthor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::staff-member.staff-member"
    },

    "analytics": {
      "type": "component",
      "repeatable": false,
      "component": "seo.analytics",
      "description": "Analytics and tracking configurations"
    },

    "schemaMarkup": {
      "type": "text",
      "description": "Advanced custom schema.org JSON-LD markup (use with caution)"
    }
  }
}
